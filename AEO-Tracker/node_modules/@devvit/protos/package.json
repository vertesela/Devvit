{
  "name": "@devvit/protos",
  "version": "0.10.17",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://developers.reddit.com/"
  },
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "build": "yarn gen-protos && yarn build:docs && tsc",
    "build:docs": "PROTO_TYPES_ONLY=1 yarn gen-protos",
    "clean": "rm -rf .turbo coverage dist src/types docs.json docs src/index.ts src/twirp-server.ts",
    "clobber": "yarn clean && rm -rf node_modules",
    "format": "./scripts/format.mjs",
    "gen-protos": "./scripts/gen-ts-proto.sh",
    "lint": "./scripts/lint-proto.sh && yarn lint:breaking && yarn lint:reddit-api-json && redlint .",
    "lint:breaking": "./scripts/lint-proto-breaking.sh",
    "lint:reddit-api-json": "echo 'todo run esbuild on validate and then execute it; ts-node and tsc fail at dealing with ESM'",
    "prepublish-cleanup": "node ./scripts/prepublish-cleanup.js",
    "prepublishOnly": "cp -a ./schema ./dist && yarn prepublish-cleanup && publish-package-json",
    "redditapi:validate": "node ./scripts/redditapi/validate-protos.js",
    "test": "yarn test:unit && yarn test:types",
    "test:types": "tsc --noEmit && tsc --noEmit --project scripts",
    "test:unit": "vitest run",
    "test:unit-with-coverage": "vitest run --coverage"
  },
  "types": "./index.d.ts",
  "dependencies": {
    "protobufjs": "7.2.4",
    "rxjs": "7.8.1"
  },
  "peerDependencies": {
    "twirp-ts": "^2.5.0"
  },
  "peerDependenciesMeta": {
    "twirp-ts": {
      "optional": true
    }
  },
  "devDependencies": {
    "@devvit/eslint-config": "0.10.17",
    "@devvit/repo-tools": "0.10.17",
    "@devvit/tsconfig": "0.10.17",
    "eslint": "8.9.0",
    "glob": "10.3.10",
    "ts-proto-kmx-2": "1.129.4",
    "twirp-ts": "2.5.0",
    "typescript": "5.3.2",
    "vitest": "0.31.0"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "gitHead": "0563739097f90f2a45c8854873a355a79272660e"
}
