  },
  "publishConfig": {
    "directory": "dist"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "node --inspect -r source-map-support/register"
    },
    "watch": [
      "dist/server/index.js"
    ],
    "env": {
      "NODE_TLS_REJECT_UNAUTHORIZED": "0",
      "NODE_ENV": "development"
    }
  },
  "source": "./src/client/index.ts",
