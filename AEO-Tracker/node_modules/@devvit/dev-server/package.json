    "nodemon": "2.0.20",
    "postcss": "8.4.22",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "rollup-plugin-node-polyfills": "0.2.1",
    "shadow-dom-testing-library": "1.7.0",
    "source-map-support": "0.5.21",
    "tailwindcss": "3.3.1",
    "tmp-promise": "3.0.3",
