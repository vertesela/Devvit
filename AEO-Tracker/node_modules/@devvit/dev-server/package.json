{
  "name": "@devvit/dev-server",
  "version": "0.10.17",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://developers.reddit.com/"
  },
  "type": "module",
  "main": "./client/index.js",
  "scripts": {
    "build": "concurrently -g -n 'client build,server build' 'yarn build:client' 'yarn build:server'",
    "build:all-tailwind": "yarn build:client-tailwind",
    "build:client": "yarn build:all-tailwind && yarn localize:build && vite build",
    "build:client-tailwind": "yarn build:tailwind-base -o client/tailwind-build.css",
    "build:server": "tsc --project ./server/tsconfig.json",
    "build:tailwind-base": "postcss --config ./postcss.config.cjs client/index.css",
    "clean": "rm -rf .turbo dist client/tailwind-build.css client/generated .devvitLocalStorage",
    "clobber": "yarn clean && rm -rf node_modules",
    "dev": "concurrently -n 'tailwind,vite client,bld server,run server' 'yarn dev:all-tailwind' 'yarn dev:client' 'yarn dev:build-server' 'yarn dev:run-server'",
    "dev:all-tailwind": "concurrently 'yarn dev:client-tailwind'",
    "dev:build-server": "yarn build:server --watch",
    "dev:client": "wait-on client/tailwind-build.css && vite build --watch",
    "dev:client-tailwind": "TAILWIND_MODE=watch yarn build:client-tailwind --watch",
    "dev:run-server": "nodemon ./scripts/run.mjs",
    "lint": "redlint .",
    "lint:fix": "yarn lint --fix",
    "localize:build": "cd client && lit-localize build 2>&1 | grep -vE 'message [a-z0-9]+ is missing, using canonical text as fallback'",
    "localize:extract": "cd client && lit-localize extract",
    "prepublishOnly": "publish-package-json",
    "run-server": "node ./scripts/run.mjs",
    "test": "concurrently -n 'unit,types,ui' 'yarn test:unit' 'yarn test:types' 'yarn test:ui'",
    "test:types": "concurrently -g -n 'test:types:client,test:types:server' 'tsc --noEmit --project ./client/tsconfig.json' 'tsc --noEmit --project ./server/tsconfig.test.json'",
    "test:ui": "vitest run --config ./vitest.ui.config.js",
    "test:unit": "vitest run",
    "test:unit-with-coverage": "vitest run"
  },
  "types": "./client/index.d.ts",
  "dependencies": {
    "@devvit/build-pack": "0.10.17",
    "@devvit/builders": "0.10.17",
    "@devvit/linkers": "0.10.17",
    "@devvit/protos": "0.10.17",
    "@devvit/public-api-old": "0.10.10",
    "@devvit/runtime-lite": "0.10.17",
    "@devvit/runtimes": "0.10.17",
    "@devvit/shared-types": "0.10.17",
    "@devvit/ui-renderer": "0.10.17",
    "@lit/reactive-element": "1.4.1",
    "chokidar": "3.5.3",
    "css-paint-polyfill": "3.4.0",
    "debounce": "1.2.1",
    "grpc-web": "1.4.2",
    "inquirer": "9.1.4",
    "koa": "2.14.2",
    "koa-mount": "^4.0.0",
    "koa-router": "12.0.1",
    "koa-static": "5.0.0",
    "koa-websocket": "7.0.0",
    "node-fetch": "3.3.0",
    "open": "8.4.0",
    "rxjs": "7.8.1",
    "tiny-glob": "0.2.9",
    "tslib": "2.5.2",
    "ws": "8.11.0"
  },
  "devDependencies": {
    "@devvit/eslint-config": "0.10.17",
    "@devvit/example-projects": "0.10.17",
    "@devvit/repo-tools": "0.10.17",
    "@devvit/tsconfig": "0.10.17",
    "@lit/localize": "0.11.4",
    "@lit/localize-tools": "0.6.9",
    "@open-wc/testing-helpers": "2.3.0",
    "@reddit/eslint-plugin-i18n-shreddit": "0.1.0",
    "@reddit/faceplate": "2.6.4",
    "@reddit/faceplate-ui": "11.1.0",
    "@rollup/plugin-node-resolve": "15.0.2",
    "@testing-library/dom": "8.19.0",
    "@testing-library/user-event": "14.4.3",
    "@types/debounce": "1.2.1",
    "@types/koa": "2.13.5",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa-mount": "4.0.2",
    "@types/koa-router": "7.4.4",
    "@types/koa-static": "4.0.2",
    "@types/koa-websocket": "5.0.7",
    "@types/node": "18.18.2",
    "@types/tmp": "0.2.3",
    "autoprefixer": "10.4.16",
    "base64-js": "1.5.1",
    "concurrently": "7.5.0",
    "dotenv": "16.0.3",
    "esbuild": "0.18.12",
