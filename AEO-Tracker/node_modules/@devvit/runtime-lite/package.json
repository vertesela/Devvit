{
  "name": "@devvit/runtime-lite",
  "version": "0.10.17",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://developers.reddit.com/"
  },
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "build": "yarn build:browser && yarn build:mobile",
    "build:assets": "yarn build:assets:protos && yarn build:assets:corejs && yarn build:assets:intl-polyfill",
    "build:assets:corejs": "esbuild --bundle --format=esm corejs.ts --outfile=src/assets/corejs.js --sourcemap",
    "build:assets:intl-polyfill": "esbuild --bundle --format=esm intl-polyfill.ts --outfile=src/assets/intl-polyfill.js --sourcemap",
    "build:assets:protos": "esbuild --bundle --format=esm protos.ts --outfile=src/assets/protos.js --sourcemap",
    "build:browser": "yarn build:assets && yarn build:browser:worker && yarn build:browser:bundle && yarn build:browser:client",
    "build:browser:bundle": "esbuild --bundle --format=esm --minify build/browser-lite.js --outfile=dist/browser-lite.worker.js --sourcemap",
    "build:browser:client": "tsc -p tsconfig.browser.client.json",
    "build:browser:worker": "vite --config vite.browser.config.js build",
    "build:mobile": "yarn build:assets && yarn build:mobile:worker && yarn build:mobile:bundle",
    "build:mobile:bundle": "esbuild --bundle --format=cjs --minify-whitespace --minify-syntax build/mobile-lite.js --outfile=dist/mobile-lite.js \"--external:./SandboxedRuntimeLite*\"",
    "build:mobile:bundle:debug": "yarn build:mobile && esbuild --bundle --format=cjs build/mobile-lite.js --outfile=dist/mobile-lite-fat.js \"--external:./SandboxedRuntimeLite*\"",
    "build:mobile:worker": "vite --config vite.mobile.config.js build",
    "clean": "rm -rf .turbo coverage dist build \"src/assets/*.js*\"",
    "clobber": "yarn clean && rm -rf node_modules",
    "lint": "redlint .",
    "lint:fix": "yarn lint --fix",
    "prepublishOnly": "publish-package-json",
    "test": "yarn test:unit && yarn test:types && yarn lint",
    "test:types": "yarn test:types:browser && yarn test:types:mobile",
    "test:types:browser": "tsc -p tsconfig.browser.client.json --noEmit",
    "test:types:mobile": "tsc -p tsconfig.mobile.client.json --noEmit",
    "test:unit": "vitest run",
    "test:unit-with-coverage": "vitest run --coverage"
  },
  "types": "./index.d.ts",
  "dependencies": {
    "@formatjs/intl-datetimeformat": "6.12.0",
    "@formatjs/intl-getcanonicallocales": "2.3.0",
    "@formatjs/intl-locale": "3.4.3",
    "@formatjs/intl-numberformat": "8.9.0",
    "lean-intl": "4.2.2"
  },
  "devDependencies": {
    "@devvit/eslint-config": "0.10.17",
    "@devvit/protos": "0.10.17",
    "@devvit/repo-tools": "0.10.17",
    "@devvit/shared-types": "0.10.17",
    "@devvit/tsconfig": "0.10.17",
    "@jitl/quickjs-singlefile-browser-release-sync": "0.29.0",
    "base64-js": "1.5.1",
    "core-js": "3.27.2",
    "esbuild": "0.18.12",
    "eslint": "8.9.0",
    "quickjs-emscripten-core": "0.29.0",
    "typescript": "5.3.2",
    "vite": "4.5.1",
    "vitest": "0.31.0"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "source": "./src/index.ts",
  "gitHead": "0563739097f90f2a45c8854873a355a79272660e"
}
